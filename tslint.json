{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": true,

    "curly": [true, "ignore-same-line"],
    "max-classes-per-file": false,
    "max-line-length": false,
    "no-inferrable-types": [true, "ignore-params", "ignore-properties"]
  }
}
